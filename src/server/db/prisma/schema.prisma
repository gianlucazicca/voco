generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NUXT_DATABASE_URL")
}

model User {
  id         String    @id @unique(map: "users_id_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  email      String    @unique
  password   String
  role       Role      @default(USER)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  updated_at DateTime? @db.Timestamp(6)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
